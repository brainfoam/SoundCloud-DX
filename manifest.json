{
  "manifest_version": 2,
  "name": "Soundcloud DX",
  "version": "1.0",

  "description": "Modifys the layout of soundcloud's website to optimize user friendliness.",

  "icons": {
    "48": "icons/scdx-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.soundcloud.com/*"],
      "js": ["scdx.js"],
      "css": ["scdx.css"]
    }
  ]
}